{% extends "base.twig" %}
{% block title %} Inicio {% endblock %}
{% block head %}{{parent()}}

<style>
    .swiper-container {
      width: 100%;
      height: 300px;
    }
    .swiper-slide {
      text-align: center;
      font-size: 18px;
      background: #fff;
      /* Center slide text vertically */
      display: -webkit-box;
      display: -ms-flexbox;
      display: -webkit-flex;
      display: flex;
      -webkit-box-pack: center;
      -ms-flex-pack: center;
      -webkit-justify-content: center;
      justify-content: center;
      -webkit-box-align: center;
      -ms-flex-align: center;
      -webkit-align-items: center;
      align-items: center;
    }
</style>
{% endblock %}
{% block content %}

<div class="row px-0 mx-0">
    <div class="col-sm-2 align-self-center">
        <img style="width:90%;padding-left:16px;" src="{{IMAGE}}fentap/fentap.png" alt="">
    </div>
    <div class="col-sm-10 pr-0">
        <!-- Swiper -->
        <div class="swiper-container">
            <div class="swiper-wrapper">
              <div class="swiper-slide" style="background-image:url({{IMAGE}}fentap/portada/portada1.jpg)">Texto</div>
              <div class="swiper-slide" style="background-image:url({{IMAGE}}fentap/portada/portada2.jpg)">Texto</div>
            </div>
            <!-- Add Pagination -->
            <div class="swiper-pagination"></div>
        </div>
    </div>
</div>

{% include 'includes/header.twig' %}

<main>
