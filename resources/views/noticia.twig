{% extends "base.twig" %}
{% block title %} Inicio {% endblock %}
{% block head %}
    {{parent()}}
{% endblock %}
{% block content %}
    {# Slider #}
    {% include 'includes/slider.twig' %}
    {# Header #}
    {% include 'includes/header.twig' %}
{# Cuerpo General #}
 <!--Main layout-->
<main>
<div class="container">
    <div class="row pt-4 h-100">
        {# {% include 'body/primera_columna.twig' %} #}
{#         name_User
        id_notice
        title_notice
        slug_notice
        descrip_notice
        date_create
        date_modificate
        html_notice
        img_portada #}
        <!--columnn Central-->
        <div class="col-sm-9 col-lg-9">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item color-fentap2"><a href="{{HOME}}">Inicio</a></li>
                <li class="breadcrumb-item color-fentap2">Noticia</li>
                <li class="breadcrumb-item color-fentap2 active" aria-current="page"> {{ datos.notice.title_notice }} </li>
              </ol>
            </nav>
            <div class="card wow fadeIn" data-wow-delay="0.4s">
                <div class="card-header card-header-title text-center text-white text-uppercase">
                    <!--Title-->
                    {{ datos.notice.title_notice }}
                </div>
                <!--Card content-->
                <div class="card-body pt-0">
                    <!--Text-->
                    <div class="content-notice" style="">
                        <p class="card-text text-justify card-body-title pt-3 color-fentap1"  style="font-size:19px;line-height:21px;">
                                {{ datos.notice.descrip_notice }} 
                        </p>
                        <div class="w-100 text-center">
                            <img src="{{IMAGE}}/upload/{{datos.notice.img_portada}}" alt="">
                        </div>
                        <br>
                        <div style="width:100%;overflow:hidden;">
                            {% autoescape %}
                                {{ datos.notice.html_notice|raw }} {# var won't be escaped #}
                            {% endautoescape %}
                        </div>
                        <hr>
                        <div class="d-flex pb-2">
                            <div class="mr-auto"> <span style="font-size:14px;" class="font-weight-light">Autor : {{datos.notice.name_User}}</span></div>
                            <div> <span class="font-weight-light" style="font-size:14px;">Fecha : {{datos.notice.date_modificate == '' ? datos.notice.date_create :  datos.notice.date_modificate }} </span> </div>
                        </div>
                    </div>                
                </div>
            </div>
        </div>
        {% include 'body/segunda_columna.twig' %}
    </div>
</div>
<!--/.Main layout-->
</main>

{% endblock %}
{% block script %}
{% endblock %}


