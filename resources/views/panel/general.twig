{% extends "panel/base.twig" %}
{% block title %} Inicio {% endblock %}
{% block head %}
    {{parent()}}
    <style>
        .control--checkbox .control__indicator:after {
        left: 11px !important;
        }
        .item .alert{float:left;
                    margin-left: 0;
                    padding:3px 10px;
                    color:#FFF;
                    border-radius:3px 4px 4px 3px;
                    background-color:#CE5454;
                    max-width:170px;
                    white-space:pre;
                    position:relative !important;
                    left:-15px;
                    opacity:0;
                    z-index:1;
                    transition:0.15s ease-out}
    </style>
{% endblock %}
{% block content %}

<div class="right_col" role="main">
    <!-- Header Pages -->
    <div class="header-pages">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <!-- x panel -->
            <div class="x_panel">
                <!-- x_title -->
                <div class=" row x_title">
                    <div class="col-md-8 col-xs-6">
                        <h2 class="h2-none" style="width:100%;"><span class="glyphicon glyphicon-book"></span>Configuraci√≥n ({{ datos.title }}) </h2>
                    </div>
                    <div class="col-md-4 col-xs-6" style="text-align:right;">
                        <a class="well well-sm"> {{ datos.title }} <span class="badge" style="background-color:rgb(46, 109, 164);color:white;"> {{ datos.count }} </span></a>
                        </a>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </div>
                </div>
                <!-- x_title -->
                <!-- x content-->
                <div class="x_content">
                    <div class="data-page-panel">
                        <div class="" role="tabpanel" data-example-id="togglable-tabs">
                            <ul id="tabPages" class="nav nav-tabs bar_tabs" role="tablist">
                                <li role="presentation" class="active">
                                    <a class="a-tab" href="#lpages" id="lpages-tab" role="tab" data-toggle="tab" aria-expanded="false">Datos Generales</a>
                                </li>
                                <li role="presentation">
                                    <a class="a-tab" href="#lenlaces" id="lenlaces-tab" role="tab" data-toggle="tab" aria-expanded="false">Enlaces</a>
                                </li>
                                <!-- data-toggle="modal" data-target="#FormPage" -->
                            </ul>
                            <div class="tab-content">
                                <div role="tabpanel" class="tab-pane fade active in" id="lpages" aria-labelledby="home-tab">
                                    {% include 'panel/forms/general.twig' %}
                                </div>
                                {# <div role="tabpanel" class="tab-pane fade" id="lenlaces" aria-labelledby="enlaces-tab">
                                    {% include 'panel/forms/enlaces.twig' %}
                                </div> #}
                            </div>
                        </div>
                    </div>
                </div>
                <!-- x content -->
            </div>
            <!-- x panel -->
        </div>
    </div>
    <div class="clearfix"></div>
</div>

{% endblock %}
{% block scripts %}
  {{parent()}}
  <script src="./js/panel/general.js?id={{random()}}"></script>
{% endblock %}
