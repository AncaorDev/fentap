    <div class="card wow fadeIn bg-fentap1 text-white text-center" data-wow-delay="0.4s">
        <!--Card content-->
        <div class="card-body pt-4">
            <a class="text-white" href="construccion"><h2>LUCHA CONTRA LA CORRUCCIÓN</h2></a>               
        </div>
    </div>
