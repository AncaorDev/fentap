<!--First columnn-->
<div class="d-sm-none d-md-block col-lg-3">
    <!-- Card -->
    <div class="card wow fadeIn" data-wow-delay="0.4s">
        <!--Card header-->
        <div class="card-header bg-fentap3 text-center text-white">
            Noticias
        </div>
        <!--Card content-->
        <div class="card-body py-1" style="background-color:rgb(22, 141, 171);">
            <!--Text-->
            {% for key, hidro_notice in datos['hidro'] %}
                <div class="content-notice row pt-1">                            
                    <div class="col-sm-4 p-0">
                        <img class="w-100" src="{{IMAGE}}fentap/noticias/defensoria_constata.jpg" alt="">
                    </div>
                    <div class="col-sm-8"> 
                        <a href="{{hidro_notice.enlace}}">
                            <span class="font-weight-bold text-white p-0" style="font-size:11px;">Defensoría pide urgente intervención de Fiscalía y EPS Grau por colapso de desagües en 9 de Octubre de Sullana </span> 
                        </a>
                    </div>
                    <div class="col-sm-12">
                        <div class="d-flex pb-0 text-white">
                            <div class="mr-auto"> <span style="font-size:12px;" class="font-weight-light">Publicado en: EMPRESAS DE AGUA</span></div>
                            <div> <span class="font-weight-light" style="font-size:12px;">ENE 19, 2018</span> </div>
                        </div>                                 
                    </div>
                </div> 
                {% if key < 2 %}
                     <hr>
                {% endif %}
            {% endfor %}                   
        </div>
    </div>
    <!--/. Card -->
    <!--Card-->
    <div class="card wow fadeIn mt-2" data-wow-delay="0.4s">
        <!--Card header-->
        <div class="card-header bg-fentap3 text-center text-white">
           Galeria de Imagenes
        </div>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" style="height:200px;">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="{{IMAGE}}fentap/noticias/defensoria_constata.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="{{IMAGE}}fentap/noticias/defensoria_constata.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="{{IMAGE}}fentap/noticias/defensoria_constata.jpg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <!--/.Card-->
    <!--Card-->                       
    <div class="card wow fadeIn mt-2" data-wow-delay="0.4s">
        <div class="card-header bg-fentap3 text-center text-white">
            <!--Title-->
           Galeria de Videos
        </div>
