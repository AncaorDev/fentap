        // autoHeight: true, //enable auto height
        spaceBetween: 20,
        pagination: {
            el: '.swiper-pagination',
            clickable: true,
        },
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
        },
        effect : 'cube',
        autoplay: {
           delay: 5000,
        },
        virtualTranslate : true,
        loop: true
        });
    </script>
{% endblock %}
